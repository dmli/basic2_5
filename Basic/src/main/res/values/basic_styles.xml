<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar"/>


    <style name="ActivityThemeTransparent" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/BasicTransparentAnimation</item>
    </style>


    <style name="ActivityThemeStandard" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/BasicAnimation</item>
    </style>


    <style name="BasicTransparentAnimation">
        <item name="android:windowEnterAnimation">@anim/basic_push_right_in</item>
        <item name="android:windowExitAnimation">@anim/basic_push_right_out</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>


    <style name="BasicAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:activityOpenEnterAnimation">@anim/basic_push_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/basic_fade_out_08</item>
        <item name="android:activityCloseEnterAnimation">@anim/basic_fade_in_08</item>
        <item name="android:activityCloseExitAnimation">@anim/basic_push_right_out</item>
    </style>


    <style name="DialogViewTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>
